<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@drawable/round"
    android:orientation="vertical"
    app:behavior_peekHeight="250dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <View
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="?android:colorPrimary" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:orientation="horizontal">

        <include
            android:id="@+id/card_weather_1"
            layout="@layout/card_weather" />

        <include
            android:id="@+id/card_weather_2"
            layout="@layout/card_weather" />

        <include
            android:id="@+id/card_weather_3"
            layout="@layout/card_weather" />

        <include
            android:id="@+id/card_weather_4"
            layout="@layout/card_weather" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_weather_forecast"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="@string/week_forecast"
        android:textAllCaps="false"
        android:textSize="13sp"
        app:cornerRadius="10dp"
        app:strokeColor="?colorPrimary"
        app:strokeWidth="2dp"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal">

        <include
            android:id="@+id/card_info_1"
            layout="@layout/card_info" />

        <include
            android:id="@+id/card_info_2"
            layout="@layout/card_info" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <include
            android:id="@+id/card_info_3"
            layout="@layout/card_info" />

        <include
            android:id="@+id/card_info_4"
            layout="@layout/card_info" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>