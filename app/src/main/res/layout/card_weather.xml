<?xml version="1.0" encoding="utf-8"?>
<soup.neumorphism.NeumorphCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardStyle"
    android:layout_width="100dp"
    android:layout_height="160dp"
    app:cardBackgroundColor="?android:background"
    app:neumorph_inset="15dp"
    app:neumorph_shadowElevation="5dp"
    app:neumorph_shapeAppearance="@style/CardsShapeAppearance">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_card_weather_time"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="7dp"
            android:maxLength="5"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="17sp"
            tools:text="00:00" />

        <ImageView
            android:id="@+id/image_view_card_weather"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            tools:src="@drawable/partly_cloudy" />

        <TextView
            android:id="@+id/text_view_card_weather_degrees"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="13dp"
            android:maxLength="5"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="17sp"
            tools:text="12ËšC" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</soup.neumorphism.NeumorphCardView>