<?xml version="1.0" encoding="utf-8"?>
<soup.neumorphism.NeumorphCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    app:cardBackgroundColor="?android:background"
    app:neumorph_inset="15dp"
    app:neumorph_shadowElevation="5dp"
    app:neumorph_shapeAppearance="@style/CardsShapeAppearance"
    tools:layout_width="100dp"
    tools:layout_height="170dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:maxLength="5"
            android:maxLines="1"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:textSize="17sp"
            tools:text="00:00" />

        <ImageView
            android:layout_weight="3"
            android:id="@+id/image_view_weather"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            tools:src="@drawable/w_partly_cloudy" />

        <TextView
            android:layout_weight="5"
            android:id="@+id/text_view_degrees"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="6"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="17sp"
            tools:text="-999ËšC" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</soup.neumorphism.NeumorphCardView>