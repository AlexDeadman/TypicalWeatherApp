<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/bg_light" />

    <soup.neumorphism.NeumorphButton
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:layout_gravity="start"
        android:layout_marginTop="-30dp"
        android:layout_marginStart="-50dp"
        app:neumorph_shadowColorLight="#26FFFFFF"
        app:neumorph_shadowColorDark="#33000000"
        android:drawableTop="@drawable/ic_baseline_menu"
        android:padding="50dp"
        app:neumorph_inset="35dp"
        app:neumorph_shadowElevation="10dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:neumorph_shapeAppearance="@style/CustomShapeAppearance"/>

    <soup.neumorphism.NeumorphButton
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:layout_gravity="end"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="-50dp"
        app:neumorph_shadowColorLight="#26FFFFFF"
        app:neumorph_shadowColorDark="#33000000"
        android:drawableTop="@drawable/ic_outline_add_circle_outline"
        android:padding="50dp"
        app:neumorph_inset="35dp"
        app:neumorph_shadowElevation="10dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:neumorph_shapeAppearance="@style/CustomShapeAppearance"/>

<!--    <include-->
<!--        android:id="@+id/appbar"-->
<!--        layout="@layout/new_app_bar"/>-->

    <include
        android:visibility="gone"
        android:id="@+id/appbar"
        layout="@layout/app_bar_main" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:maxLength="5"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="80sp"
        tools:text="12ËšC" />


    <TextView
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:textSize="28sp"
        tools:text="September 23" />

    <include
        android:id="@+id/bottom_sheet"
        layout="@layout/bottom_sheet_main" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>