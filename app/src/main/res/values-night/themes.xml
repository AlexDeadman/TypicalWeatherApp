<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TypicalWeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4B5F88</item>
        <item name="colorSecondaryVariant">#AAAAAA</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/bg_night</item>
    </style>

    <style name="PreferencesTheme" parent="Theme.TypicalWeatherApp">
        <item name="android:windowBackground">@color/bg_night</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>