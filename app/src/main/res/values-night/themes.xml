<resources>
    <!-- Base application theme. -->
    <style name="Theme.TypicalWeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">#4B5F88</item>-->
        <item name="colorSecondary">@android:color/white</item>
        <item name="colorSecondaryVariant">#AAAAAA</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/bg_night</item>
    </style>

    <style name="PreferencesTheme" parent="Theme.TypicalWeatherApp">
        <item name="android:windowBackground">@color/bg_night</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CardStyle" parent="Theme.TypicalWeatherApp">
        <item name="neumorph_shadowColorDark">@color/card_shadow_dark_dark</item>
        <item name="neumorph_shadowColorLight">@color/card_shadow_light_dark</item>
    </style>
</resources>