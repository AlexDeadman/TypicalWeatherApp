<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TypicalWeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#038CFE</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#828282</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/bg_light</item>
<!--        <item name="android:navigationBarColor">@color/bg_light</item>-->
    </style>

    <style name="Theme.TypicalWeatherApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TypicalWeatherApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleCentered">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.TypicalWeatherApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>