<resources>
    <!-- Base application theme. -->
    <style name="Theme.TypicalWeatherApp" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#038CFE</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">#4B5F88</item>-->
        <item name="colorSecondary">#038CFE</item>
        <item name="colorSecondaryVariant">#828282</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/bg_light</item>
    </style>

    <style name="Theme.TypicalWeatherApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ContentBackground">
        <item name="android:background">@drawable/bg_light</item>
    </style>

    <style name="CircleButtonShapeAppearance">
        <item name="neumorph_cornerFamily">oval</item>
    </style>

    <style name="CircleButtonStyle" parent="Widget.Neumorph.Button">
        <item name="neumorph_shadowColorDark">@color/circle_shadow_dark</item>
        <item name="neumorph_shadowColorLight">@color/circle_shadow_light</item>
    </style>

    <style name="CardsShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">12dp</item>
    </style>

    <style name="PreferenceCardsShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">35dp</item>
    </style>

    <style name="FavouriteCardsShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">18dp</item>
    </style>

    <style name="FavouriteRemoveCard">
        <item name="cardBackgroundColor">#C8DAFF</item>
    </style>

    <style name="DrawerTextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PreferencesTheme" parent="Theme.TypicalWeatherApp">
        <item name="android:windowBackground">@color/bg_light</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CardStyle" parent="Theme.TypicalWeatherApp">
        <item name="neumorph_shadowColorDark">@color/card_shadow_dark_light</item>
        <item name="neumorph_shadowColorLight">@color/card_shadow_light_light</item>
    </style>

    <style name="WfCardBackground">
        <item name="android:background">@drawable/item_week_forecast_bg_light</item>
    </style>

    <style name="WfTextStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>