<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TypicalWeatherApp" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#038CFE</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4B5F88</item>
        <item name="colorSecondaryVariant">#828282</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/bg_light</item>
<!--        <item name="android:navigationBarColor">@color/bg_light</item>-->
    </style>

    <style name="Theme.TypicalWeatherApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TypicalWeatherApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleCentered">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.TypicalWeatherApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CircleShapeAppearance">
        <item name="neumorph_cornerFamily">oval</item>
    </style>

    <style name="CardsShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">12dp</item>
    </style>

    <style name="PreferenceCardsShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">35dp</item>
    </style>

    <style name="CardStyle" parent="Theme.TypicalWeatherApp">
        <item name="neumorph_shadowColorDark">@color/card_shadow_dark</item>
        <item name="neumorph_shadowColorLight">@color/card_shadow_light</item>
    </style>

    <style name="PreferencesTheme" parent="Theme.TypicalWeatherApp">
        <item name="android:windowBackground">@color/bg_light</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DrawerTextAppearance">
        <item name="android:textSize">20sp</item>
    </style>
</resources>